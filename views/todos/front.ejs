<%include ../partials/header%>
<style type="text/css">
	body{
background: #DD5E89;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #F7BB97, #DD5E89);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #F7BB97, #DD5E89); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	}
	.temp{
		opacity: 0;
		color:black;
		font-size:25px;
		font-style:sans-serif;
		background-color: transparent;
		text-transform: capitalize;
	}
	.fadeIn{
		opacity: 1;
		transition: linear .5s;
	}
	.forNumber{
		list-style: decimal;
	}
</style>
<script type="text/javascript">
	window.onload=function(){
		var li=document.querySelectorAll(".temp");
		console.log(li);
		for(var i=0;i<li.length;i++){
			li[i].classList.add("fadeIn");
		}
	}
</script>
<%if(currentUser.todos.length == 0){%>
	<style type="text/css">
	#del{
		margin-left:30px;
		display:none;
	}
	#padding{
		margin-top: 100px;
		padding:20px 0px;
		-webkit-box-shadow: 0px 0px 65px 14px rgba(0,0,0,0.75);
		-moz-box-shadow: 0px 0px 65px 14px rgba(0,0,0,0.75);
		box-shadow: 0px 0px 65px 14px rgba(0,0,0,0.75);
	}

	button{
		margin:4px auto;
	}
	form{
		margin-top:30px;
		margin-left:10%;
		margin-right:10%;
	}
	h4{	
		color:black;
	}
	h1{	
		color:black;
	}

</style>
<div class="container-fluid">
	<div class="row" >
	<div class="col-lg-4 col-md-2 col-sm-2 col-xs-1"> </div>
	<div class="col-lg-4 col-md-8 col-sm-8 col-xs-10" id="padding" > 
		
		<div >
			<h1>Bravo! No ToDos left</h1>
		</div>
		<form method="POST" action="/dashboard">
			<h3 style="text-align: center;">Add a new ToDo</h3>
			<div id="frm">
				<input type="text" name="todo" placeholder="Enter your todo" class="form-control">
				<button type="submit" class="btn btn-block btn-success"> <i class="fas fa-plus"></i> Add</button>
				<p style="font-weight: bold;"><em>(pro tip:-Keep your todo as short as you can.)</em></p>
			</div>
		</form>
		<br>
		<br>
	</div>
	<div class="col-lg-4 col-md-2 col-sm-2 col-xs-1"> </div>
</div>
<div >
	
</div>
</div>
<%}else{%>
	<style type="text/css">
	body{
		
	}
	#del{
		margin-left:30px;
		display:none;
	}
	li:hover #del{
		display:inline;
	}
	#padding{
		-webkit-box-shadow: 0px 0px 65px 14px rgba(0,0,0,0.75);
		-moz-box-shadow: 0px 0px 65px 14px rgba(0,0,0,0.75);
		box-shadow: 10px 0px 110px -15px rgba(0,0,0,0.75);
		padding:40px 0px;
		color:white;
		height: 100%;
		position: relative;
		top: 0;
	}
	#firstButton{
		margin:4px auto;
	}
	li{
		color:black;
		font-size:20px;
	}
	form{
		margin-left:30px;
		margin-right:30px
	}
	#show{
		margin:auto 30px;
	}
	h4{
		color:black;
	}
</style>
<div class="container-fluid">
	<div class="row" >
	<div class="col-lg-4 col-md-2 col-sm-2 col-xs-1"> </div>
	<div class="col-lg-4 col-md-8 col-sm-8 col-xs-10" id="padding" style="width: 100px;"> 
		
		<form method="POST" action="/dashboard">
			
				<h3 style="text-align: center; color:black;">Add a ToDo</h3>
				<div id="frm">
					<input type="text" name="todo" placeholder="Enter your todo" class="form-control">
					<button type="submit" class="btn btn-block btn-success" id="firstButton"> <i class="fas fa-plus"></i> Add</button>
					<p style="font-weight: bold; color:black;"><em>(pro tip:-Keep your todo as short as you can.)</em></p>
				</div>
		</form>
		<br>
		<div id="show" style="height: 100%;">
			<h4>Listing all your todos.</h4>
			<ul class="forNumber">
				<%for(var i=0;i<currentUser.todos.length;i++){%>
						<li class="temp" style="word-wrap: break-word; width: auto;"><%=currentUser.todos[i]%>
							<!-- <span >
							<a id="del" href="#"><i class="material-icons">delete</i></a></span> -->	
							<span>
								<form method="POST" action="/dashboard/delete/?_method=delete">
									<input type="text" name="todo" value="<%=currentUser.todos[i]%>" style="visibility: hidden; position: absolute; display: none">
									<button id="del" style="background-color: transparent; border: none; color:blue; text-decoration: underline; cursor: pointer; white-space: nowrap;"><i class="material-icons"><i class="fas fa-trash" style="color:red;"></i></i></button>
								</form>
							</span> 
						</li>
				<%}%>
			</ul>
		</div>
		<!-- <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br> -->
	</div>
	<div class="col-lg-4 col-md-2 col-sm-2 col-xs-1"> </div>
</div>
<div >
	
</div>
</div>
<%}%>
<%include ../partials/footer%>